<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/weekTitlePaddingTop"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp"
    android:paddingTop="@dimen/weekTitlePaddingBottom"
    android:weightSum="7">

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek1"
        android:textSize="@dimen/textSizefordayname"
        android:textAllCaps="true"
        android:textColor="@color/CTAMegenta"
        android:text="SUN" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek2"
        android:textSize="@dimen/textSizefordayname"
        android:textAllCaps="true"
        android:textColor="@color/CTAMegenta"
        android:text="MON" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek3"
        android:textSize="@dimen/textSizefordayname"
        android:textAllCaps="true"
        android:textColor="@color/CTAMegenta"
        android:text="TUE" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek4"
        android:textSize="@dimen/textSizefordayname"
        android:textAllCaps="true"
        android:textColor="@color/CTAMegenta"
        android:text="WED" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek5"
        android:textSize="@dimen/textSizefordayname"
        android:textAllCaps="true"
        android:textColor="@color/CTAMegenta"
        android:text="THU" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek6"
        android:textSize="@dimen/textSizefordayname"
        android:textAllCaps="true"
        android:textColor="@color/CTAMegenta"
        android:text="FRI" />

    <TextView
        style="@style/CalendarView.DayOfTheWeek"
        android:layout_weight="1"
        android:tag="dayOfWeek7"
        android:textSize="@dimen/textSizefordayname"
        android:textAllCaps="true"
        android:textColor="@color/CTAMegenta"
        android:text="SAT" />
</LinearLayout>