<?xml version="1.0" encoding="utf-8"?>


<!-- This Layout contains the company logo
     - Along with the Image of merchant,its id
     - and the name of the merchant
   -->


<android.support.v7.widget.Toolbar
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar"
    android:background="@color/toolbarColor"
    android:minHeight="?attr/actionBarSize"
    app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/marginoftoolbarlayout"
    android:layout_marginBottom="@dimen/marginoftoolbarlayout"
    android:id="@+id/rltToolBarLayout"
    android:layout_height="match_parent">


    <!-- Here we have used Image view
      -displaying Company logo
    -->


    <ImageView
        android:layout_width="wrap_content"
        android:id="@+id/imgLogo"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/svr_logo"
        android:layout_centerInParent="true"
        />


    <!-- Here we have used CircularImageview
      -displaying photos of the merchant
    -->





    <!-- This TextView is used for displaying
      -the name of the merchant
    -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvMerchantName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/john_doe"
        android:textSize="@dimen/textsizeFortoolbardata"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/marginformerchantname"
        android:textColor="@color/TextColorWhite"
        />


    <!-- This TextView is used for displaying
      -the ID of the merchant
    -->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txvMerchandId"
        android:layout_below="@+id/txvMerchantName"
        android:text="@string/merchant_id_445567"
        android:textColor="@color/TextColorForMerchandId"
        android:textStyle="normal"
        android:textSize="@dimen/textsizeFortoolbardata"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>
</android.support.v7.widget.Toolbar>